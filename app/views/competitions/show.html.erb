

<section>
<div class="col-sm-10 col-sm-offset-1 col-xs-12">

<h3 class="text-center show-title" id="<%= @competition.id %>"><%= @competition.title %></h3>
  <div class="col-sm-6 col-sm-offset-3">
      <img src="<%= @competition.image_url %>" id="show-image">
  </div>
  <div class="col-sm-4 col-sm-offset-2" id="comp-details">
    <small>Website:</small>
    <a href="<%= @competition.website %>" id="comp-website"><%= @competition.website %></a><br>
    <small>Category:</small><span><%= @competition.all_tags %></span>
  </div>
  <div class="col-sm-5 " id="comp-details">
      <p id="comp-desc"><%= simple_format(@competition.description) %></p>
  </div>
  <div id="new-comp-btn">
    <button><span class="glyphicon glyphicon-plus-sign" id="saveToUser"></span></button>
  </div>
</div>
</section>

