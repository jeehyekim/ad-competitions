
<section>
<div class="col-sm-10 col-sm-offset-1 col-xs-12">

<h3 class="text-center show-title competition" id="<%= @competition.id %>"><%= @competition.title %></h3>
  <div class="col-sm-6 col-sm-offset-3">
      <img src="<%= @competition.image_url %>" id="show-image">
  </div>
  <div class="col-sm-4 col-sm-offset-2" id="comp-details">
    
    <a href="<%= @competition.website %>" id="comp-website"><small>Visit Website</small></a><br>
    <p><small> Category: <%= raw tag_links(@competition.all_tags) %></small><br><hr>
    <span id="user-early-reg" data-early-reg='<%= @competition.early_bird %>'>Early Bird Deadline: </span><%= @competition.early_bird %><br>
    <span id="user-deadline" data-deadline='<%= @competition.deadline %>'>Final Deadline: </span><%= @competition.deadline %><br>
    <span id="user-notification" data-notification='<%= @competition.notifiction %>'>Notifications: </span><%= @competition.notifiction %></p>
  </div>
  <div class="col-sm-5 " id="comp-details">
      <p id="comp-desc"><%= simple_format(@competition.description) %></p>
  </div>

  <div id="new-comp-btn">
    <button><span class="glyphicon glyphicon-plus-sign" id="saveToUser"></span></button>
  </div>
  
</div>
<p class='current_user' id='<%= current_user.id %>' style='display:none'></p>
</section>

 