<section>
<div class="col-sm-10 col-sm-offset-1 col-xs-12" id="user-header">
<div>
  <% if @user.image == nil %>
    <img src="//placehold.it/200" class="avatar img-circle text-center" alt="avatar" style="height:100px" id="profile-image">
  <% else %>
   <%= image_tag @user.image.url(:thumb) %>
  <% end %>
  <h4 class="text-center">Welcome, <%= @user.name %></h4>
</div>
  <div class="col-sm-4 col-sm-offset-2" id="user-comp-show">
    <p>Email: <%= @user.email %></p>
    <h5 style="font-family: 'Cabin', sans-serif">Joined: <%= time_ago_in_words(@user.created_at) %> ago</h5>
    <h5><%= link_to "Edit Profile", edit_user_path(@user) %></h5>
  </div>
  <div class="col-sm-5" id="user-deadlines">
      <p id="comp-desc"></p>
  </div>
</div>
</section>